<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="arthur.dao.UserMapper">
	<select id="sLogin"  resultType="Student">
		select * from student where studentName=#{name}
	</select>
	<select id="tLogin" resultType="Teacher">
		select * from teacher where teacherName=#{name}
	</select>
	<update id="updatePwd" parameterType="Student">
		update student set studentPwd=#{stuPwd1} where id=#{id}
	</update>
	<insert id="addStudent" parameterType="Student">
		insert into student(studentName,studentPwd,studentNo,studentSex,stuClass) values(#{studentName},#{studentPwd},#{studentNo},#{studentSex},#{stuClass})
	</insert>
</mapper>