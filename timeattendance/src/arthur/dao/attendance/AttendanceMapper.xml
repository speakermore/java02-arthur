<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="arthur.dao.attendance.AttendanceMapper">
	<!-- 根据学生id签到 -->
	<insert id="addstudentSign" >
		insert into attendance(studentSign,studentId) values (#{studentSign},#{studentId})
	</insert>
	<!-- 根据学生id签退 -->
	<update id="updatestudentOut" >
		 update attendance set studentOut=#{studentOut} where studentId=#{studentId}
	</update>
	<!-- 老师通过输入学生id查询该学生的考勤信息 -->
	<select id="findbyStudentId" resultType="Attendance">
		select * from attendance where studentId=#{studentId}
	</select>
</mapper>