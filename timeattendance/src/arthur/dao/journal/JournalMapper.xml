<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="arthur.dao.journal.JournalMapper">
	<!-- 学生根据自己的id添加日志 -->
	<insert id="addJournal" >
		insert into journal(journalContent,journalTime) values (#{journalContent},#{journalTime})
	</insert>
	
	<!-- 学生根据自己的id修改日志 -->
	<update id="updateJournal">
		update journal set journalContent=#{journalContent} where studentId=#{studentId}
	</update>
	
	<!-- 老师根据学生id去查看该学生的日志 -->
	<select id="selectJournal" resultType="Journal">
		select * from journal where studentId=#{studentId}
	</select>
</mapper>