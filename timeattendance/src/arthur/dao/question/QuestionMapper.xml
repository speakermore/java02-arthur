<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="arthur.dao.question.QuestionMpper">
	<!-- 提问者:提问者给出提问的内容和时间 -->
	<insert id="addQuestionContentQuestionTime" >
		insert into question(questionContent,questionTime) values (#{questionContent},#{questionTime})
	</insert>
	
	<!-- 提问者可以根据自己的id修改问题内容 -->
	<update id="updateStudentIdQuestionContent">
		update question set questionContent=#{questionContent} where studentId=#{studentId}
	</update>
	
</mapper>