<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="arthur.dao.integral.IntegralMapper">
	<!-- 通过学生id添加积分 -->
	<insert id="addIntegral" parameterType="Integer">
		insert into integral(integralNum) values(#{integralNum})
	</insert>
	<!-- 通过提问给回答者id积分奖励 -->
	<update id="updateIntegral" parameterType="Integer">
		update integral set giftPoints=#{giftPoints} integralNum=(integralNum-giftPoints) where studentId=#{studentId}
	</update>
</mapper>